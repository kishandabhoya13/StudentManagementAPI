@{
    Layout = null;
}
@model StudentManagement.Models.Course
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<div id="CreateCourseModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Course</h5>
                <button type="button"
                        class="btn-close btn-close-custom"
                        data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form style="border:none !important;" method="post" asp-action="AddCourse" asp-controller="Home">
                    @*<input type="hidden" asp-for="Id" />*@
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-12">
                            <div class="form-group form-floating mb-3">
                                <input type="text"
                                       class="form-control input-lg"
                                       id="floatingCourseName"
                                       asp-for="Name"
                                       placeholder="Course Name" />
                                <label for="floatingCourseName">Course Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="gap-2 d-md-flex justify-content-center justify-content-md-end pt-4 submit-cancel-btn">
                        <button class="btn btn-primary me-md-2 submit-btn" type="submit">
                            Submit
                        </button>
                        <button class="btn btn-primary cancel-btn" type="reset">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>