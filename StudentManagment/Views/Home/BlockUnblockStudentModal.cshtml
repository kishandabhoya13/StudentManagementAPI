@{
    Layout = null;
}
@model Student
<div id="BlockUnblockStudentModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                @if (Model.IsBlocked)
                {

                    <h5 class="modal-title">UnBlock Student</h5>
                }
                else
                {
                    <h5 class="modal-title">Block Student</h5>

                }
                <button type="button"
                        class="btn-close btn-close-custom"
                        data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (Model.IsBlocked)
                {

                    <p class="mt-3">Are you Sure You want to Unblock this Student?</p>

                }
                else
                {
                    <p class="mt-3">Are you Sure You want to block this Student?</p>


                }
                <div class="gap-2 d-md-flex justify-content-center justify-content-md-end pt-4 submit-cancel-btn">
                    <form class="w-100" asp-action="BlockUnblockStudent" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="StudentId" />
                        <input type="hidden" asp-for="IsBlocked" />
                        <button class="btn btn-primary me-md-2 submit-btn" type="submit">
                            Submit
                        </button>
                    </form>
                    <button class="btn btn-primary cancel-btn" data-bs-dismiss="modal" type="button">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>