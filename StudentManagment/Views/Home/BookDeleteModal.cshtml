@{
    Layout = null;
}
@model StudentManagment.Models.BookViewModel
<div id="DeleteBookModal" class="modal fade">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Book</h5>
                <button type="button"
                        class="btn-close btn-close-custom"
                        data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mt-3">Are you Sure You want to delete this Book?</p>
                <div class="gap-2 d-md-flex justify-content-center justify-content-md-end pt-4 submit-cancel-btn">
                    <button onclick="location.href='@Url.Action("DeleteBook","Home", new {BookId = Model.BookId})'" class="btn btn-primary me-md-2 submit-btn" type="submit">
                        Submit
                    </button>
                    <button class="btn btn-primary cancel-btn" data-bs-dismiss="modal" type="button">
                        Cancel
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>