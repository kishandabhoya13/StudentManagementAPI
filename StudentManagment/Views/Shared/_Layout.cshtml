            $('#stayLoggedInBtn').click(function () {
                if (apiModalTriggered) {
                    apiModalTriggered = false;
                    $('#confirmationModal').modal('hide');
                    apiResetModalTimeout();
                    clearInterval(countdownInterval);

                }
            });
        })
    </script>
