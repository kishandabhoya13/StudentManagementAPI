@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model StudentManagment.Models.ForgotPasswordViewModel


<section class="sign-in">
    <div class="container">
        <h5 class="text-danger ms-3">@TempData["error"]</h5>
        <h5 class="text-success ms-3">@TempData["Success"]</h5>
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/Images/signin-image.jpg" alt="sing up image"></figure>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Forgot Password</h2>
                <form method="POST" class="register-form" id="login-form" asp-action="CheckUserName" asp-controller="Login">
                    <div class="register-form-row">
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" asp-for="UserName" id="your_username" placeholder="UserName or Email" />
                            <span class="text-danger" asp-validation-for="UserName"></span>

                        </div>
                        <div class="form-group form-button">
                            <button type="submit" id="signin" class="form-submit">Forgot Password</button>
                        </div>
                    </div>
                </form>
                <a asp-action="Login" asp-controller="Login" class="signup-image-link">Back to Login</a>
            </div>
        </div>
    </div>
</section>