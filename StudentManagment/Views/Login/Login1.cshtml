@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model StudentManagment.Models.StudentViewModel
<form asp-action="CheckLogin" asp-controller="Login" method="post">
    <div class="container">
        <h2>Student Login</h2>
        <h4 class="text-danger">@TempData["error"]</h4>

        <label for="uname"><b>Username</b></label>
        <input type="text" asp-for="UserName" placeholder="Enter Username">
        <span class="text-danger" asp-validation-for="UserName"></span><br />

        <label for="psw"><b>Password</b></label>
        <input type="password" asp-for="Password" placeholder="Enter Password">
        <span class="text-danger" asp-validation-for="Password"></span>

        <button type="submit">Login</button>
    </div>
</form>